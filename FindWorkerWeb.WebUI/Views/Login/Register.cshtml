            <form  action="" method="POST" id="KayitOlUser" style="">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="hidden" name="_csrf" value="R68ot0k1-6LVMrGFSg9PJXZmYy05c18UdQCs">
                <div class="homepage_input form-group clearfix">
                    <div class="half_input left">
                        @Html.ValidationMessageFor(x => x.user.Name, "", new { style = "color:red" })
                        @Html.TextBoxFor(x => x.user.Name, new { @class = "form-control", @placeholder = "Ad" })
                        <span class="help-block"> </span>
                        <span asp-validation-for="Name">  </span>


                    </div>
                    <div class="half_input right">
                        @Html.ValidationMessageFor(x => x.user.Surname, "", new { style = "color:red" })
                        @Html.TextBoxFor(x => x.user.Surname, new { @class = "form-control", @placeholder = "Soyad" })
                        <span class="help-block"> </span>
                        <span asp-validation-for="SurName">  </span>
                    </div>
                </div>
                <div class="homepage_input form-group">
                    @Html.ValidationMessageFor(x => x.user.UserName, "", new { style = "color:red" })
                    @Html.TextBoxFor(x => x.user.UserName, new { @class = "form-control", @placeholder = "Kullanıcı Adı" })
                    <span class="help-block"> </span>
                    <span asp-validation-for="UserName">  </span>
                </div>

                <div class="homepage_input form-group">
                    @Html.ValidationMessageFor(x => x.user.Email, "", new { style = "color:red" })
                    @Html.TextBoxFor(x => x.user.Email, new { @class = "form-control", @placeholder = "Email" })
                    <span class="help-block"> </span>
                    <span asp-validation-for="Email">  </span>
                </div>
                <div class="homepage_input form-group">
                    @Html.ValidationMessageFor(x => x.user.PhoneNumber, "", new { style = "color:red" })
                    @Html.TextBoxFor(x => x.user.PhoneNumber, new { @class = "form-control", @placeholder = "Telefon Numarası" })
                    <span class="help-block"> </span>
                    <span asp-validation-for="PhoneNumber">  </span>
                </div>
                <div class="homepage_input form-group" >
                  
                    @Html.ValidationMessageFor(x => x.user.Password, "", new { style = "color:red" })
                    @Html.TextBoxFor(x => x.user.Password, new { @class = "form-control", @type= "Password", @placeholder = "Şifre" })
                    <span asp-validation-for="Password">  </span>
                </div>

                <div class="homepage_input form-group">
                    <input type="submit" value="Kayıt Ol" style="padding: 0" class="form-control homepage_signup_button">

                </div>

            </form>
            <form action="/Login/CompanyRegister" method="POST" id="KayitOlCompany" style="display: none">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="homepage_input form-group">
                    @Html.ValidationMessageFor(x => x.company.CompanyName, "", new { style = "color:red" })
                    @Html.TextBoxFor(x => x.company.CompanyName, new { @class = "form-control", @placeholder = "Şirket Ad" })
                    <span asp-validation-for="CompanyName">  </span>
                    <span class="help-block"> </span>
                </div>
                <div class="homepage_input form-group">
                    @Html.ValidationMessageFor(x => x.company.CompanyEmail, "", new { style = "color:red" })
                    @Html.TextBoxFor(x => x.company.CompanyEmail, new { @class = "form-control", @placeholder = "Şirket Email" })
                    <span class="help-block"> </span>
                    <span asp-validation-for="CompanyEmail">  </span>
                </div>
                <div class="homepage_input form-group">
                    @Html.ValidationMessageFor(x => x.company.Password, "", new { style = "color:red" })
                    @Html.TextBoxFor(x => x.company.Password, new { @class = "form-control", @type= "Password", @placeholder = "Şifre" })
                    <span asp-validation-for="Password">  </span>
                </div>
                <div class="homepage_input form-group">
                    <input type="submit" value="Kayıt Ol" style="padding: 0" class="form-control homepage_signup_button">
                </div>
            </form>
